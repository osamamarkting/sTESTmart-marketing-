{
  "manifest_version": 3,
  "name": "Smart Marketing Assistant TEST",
  "version": "1.0",
  "description": "Fake GPT assistant for testing only.",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Marketing TEST"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
